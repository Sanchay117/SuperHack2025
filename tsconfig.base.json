{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ninjas/types": ["packages/types/src/index.ts"],
      "@ninjas/utils": ["packages/utils/src/index.ts"],
      "@ninjas/llm": ["packages/llm/src/index.ts"],
      "@ninjas/ui": ["packages/ui/src/index.ts"]
    }
  }
}


// Datasource & generator
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Auth models (NextAuth subset)
model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  image         String?
  role          Role     @default(TECHNICIAN)
  organizations OrganizationMember[]
  technician    TechnicianProfile?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id])
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

// Core domain
model Organization {
  id        String               @id @default(cuid())
  name      String
  members   OrganizationMember[]
  clients   Client[]
  insights  InsightSnapshot[]
  createdAt DateTime             @default(now())
}

model OrganizationMember {
  id        String        @id @default(cuid())
  orgId     String
  userId    String
  role      Role
  org       Organization  @relation(fields: [orgId], references: [id])
  user      User          @relation(fields: [userId], references: [id])
  @@unique([orgId, userId])
}

model Client {
  id        String    @id @default(cuid())
  orgId     String
  name      String
  alerts    Alert[]
  tickets   Ticket[]
  patches   Patch[]
  org       Organization @relation(fields: [orgId], references: [id])
}

model TechnicianProfile {
  id        String @id @default(cuid())
  userId    String @unique
  skills    String[]
  user      User   @relation(fields: [userId], references: [id])
}

model Alert {
  id          String     @id @default(cuid())
  clientId    String
  source      String
  externalId  String
  severity    AlertSeverity
  status      AlertStatus @default(NEW)
  fingerprint String
  payload     Json
  clusterId   String?
  cluster     AlertCluster? @relation(fields: [clusterId], references: [id])
  client      Client     @relation(fields: [clientId], references: [id])
  @@unique([source, externalId])
  @@index([fingerprint])
}

model AlertCluster {
  id                   String        @id @default(cuid())
  hash                 String        @unique
  size                 Int
  topSeverity          AlertSeverity
  representativeAlertId String
  alerts               Alert[]
}

model Ticket {
  id                String   @id @default(cuid())
  clientId          String
  source            String
  externalId        String
  status            String
  summary           String
  description       String
  suggestedActions  Json?
  assignedTo        String?
  client            Client   @relation(fields: [clientId], references: [id])
  @@unique([source, externalId])
}

model Patch {
  id        String   @id @default(cuid())
  clientId  String
  vendor    String
  product   String
  version   String
  cveIds    String[]
  kbIds     String[]
  riskScore Float
  client    Client   @relation(fields: [clientId], references: [id])
}

model PatchPlan {
  id             String       @id @default(cuid())
  clientId       String
  targetGroup    String
  dryRun         Boolean      @default(true)
  createdBy      String
  plan           Json
  approvalStatus ApprovalStatus @default(PENDING)
  client         Client       @relation(fields: [clientId], references: [id])
  runs           PatchRun[]
}

model PatchRun {
  id         String       @id @default(cuid())
  planId     String
  status     PatchRunStatus @default(PENDING)
  startedAt  DateTime?
  finishedAt DateTime?
  logs       String?
  plan       PatchPlan    @relation(fields: [planId], references: [id])
}

model ActionLog {
  id           String   @id @default(cuid())
  actorType    ActorType
  actorId      String
  actionType   String
  resourceType String
  resourceId   String
  before       Json?
  after        Json?
  approvedBy   String?
  createdAt    DateTime @default(now())
}

model InsightSnapshot {
  id      String   @id @default(cuid())
  at      DateTime
  orgId   String
  metrics Json
  org     Organization @relation(fields: [orgId], references: [id])
}

model FeatureFlag {
  id       String  @id @default(cuid())
  key      String  @unique
  enabled  Boolean @default(false)
  audience Json
}

model ApiKey {
  id        String   @id @default(cuid())
  name      String
  tokenHash String
  scopes    String[]
}

enum Role {
  ADMIN
  TECHNICIAN
  VIEWER
}

enum AlertSeverity {
  LOW
  MED
  HIGH
  CRITICAL
}

enum AlertStatus {
  NEW
  NOISE
  ACK
  RESOLVED
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PatchRunStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
  ROLLED_BACK
}


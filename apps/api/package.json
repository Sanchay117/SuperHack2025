{
    "name": "@ninjas/api",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap",
        "start": "node dist/index.js",
        "lint": "eslint .",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "prisma": "prisma",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate deploy",
        "db:reset": "prisma migrate reset --force",
        "db:seed": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts",
        "openapi": "tsx src/openapi.ts"
    },
    "dependencies": {
        "@ninjas/types": "workspace:*",
        "@ninjas/utils": "workspace:*",
        "@ninjas/llm": "workspace:*",
        "express": "^4.19.2",
        "zod": "^3.23.8",
        "zod-to-openapi": "^6.2.1",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "pino": "^9.4.0",
        "pino-http": "^10.2.0",
        "uuid": "^9.0.1",
        "socket.io": "^4.7.5",
        "socket.io-client": "^4.7.5",
        "ioredis": "^5.4.1",
        "bullmq": "^5.12.1",
        "jsonwebtoken": "^9.0.2",
        "bcryptjs": "^2.4.3",
        "prisma": "^5.19.1",
        "@prisma/client": "^5.19.1",
        "morgan": "^1.10.0",
        "prom-client": "^15.1.3",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.11.30",
        "@types/morgan": "^1.9.9",
        "eslint": "^8.57.0",
        "typescript": "^5.6.2",
        "tsx": "^4.19.1",
        "ts-node": "^10.9.2",
        "tsup": "^8.0.2",
        "vitest": "^2.1.3",
        "supertest": "^7.0.0"
    }
}

{
    "name": "the-ninjas-monorepo",
    "private": true,
    "version": "0.1.0",
    "packageManager": "pnpm@9.12.0",
    "scripts": {
        "dev": "turbo run dev --parallel",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "typecheck": "turbo run typecheck",
        "test": "turbo run test",
        "test:e2e": "turbo run test:e2e",
        "db:push": "pnpm --filter @ninjas/api prisma db push",
        "db:migrate": "pnpm --filter @ninjas/api prisma migrate deploy",
        "db:reset": "pnpm --filter @ninjas/api prisma migrate reset --force",
        "db:seed": "pnpm --filter @ninjas/api prisma db seed",
        "openapi": "pnpm --filter @ninjas/api run openapi",
        "prepare": "husky install"
    },
    "devDependencies": {
        "turbo": "^2.1.3",
        "husky": "^9.0.11"
    }
}
